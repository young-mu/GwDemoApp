{
    "version": "2.0",
    "id": "am335x-hzmc",
    "model": "am335x-hzmc",
    "outputs": {
        "gnd-0": "ground/gnd-0",
        "gnd-1": "ground/gnd-1",
        "vdd-0": "power/vdd-0",
        "vdd-1": "power/vdd-1"
    },
    "devices": [
        {
            "id": "ground",
            "outputs": {
                "gnd-0": {
                    "type": "ground"
                },
                "gnd-1": {
                    "type": "ground"
                }
            }
        },
        {
            "id": "power",
            "outputs": {
                "vdd-0": {
                    "type": "power",
                    "args": {
                        "voltage": "3.3v"
                    }
                },
                "vdd-1": {
                    "type": "power",
                    "args": {
                        "voltage": "5v"
                    }
                }
            }
        },
        {
            "id": "uart-1",
            "model": "ruff-sys-uart",
            "driver": "sys-uart",
            "inputs": {
                "device": {
                    "type": "string",
                    "args": {
                        "path": "/dev/ttyO1"
                    }
                }
            },
            "outputs": {
                "uart" : {
                    "type":"uart"
                }
            }
        },
        {
            "id": "uart-2",
            "model": "ruff-sys-uart",
            "driver": "sys-uart",
