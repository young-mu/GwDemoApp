            "inputs": {
                "device": {
                    "type": "string",
                    "args": {
                        "path": "/dev/ttyO4"
                    }
                }
            },
            "outputs": {
                "uart" : {
                    "type":"uart"
                }
            }
        },
        {
            "id": "uartext-1",
            "model": "rs485-uart2",
            "driver": "rs485-uart2",
            "inputs": {
                "uart": {
                    "type": "uart",
                    "args": {
                        "baudRate": 9600,
                        "stopBits": 1,
                        "dataBits": 8,
                        "parity": "none",
                        "flowControl": "none"
                    },
                    "bind": "uart-1/uart"
